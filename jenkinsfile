pipeline {
    agent any

    stages 
    {
        stage('Build') {
            steps {
                echo 'Build app'
            }
        }
        stage('Test') {
            steps {
                echo 'Test app'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy app'
            }
        }
    }
    post
    {
        success 
        {
        emailext body: 'Pipeline was successful', subject: 'Estado del pipeline: Ã‰xito', to: 'junior.saul.maiz@gmail.com'
        }
        failure 
        {
        emailext body: 'Pipeline failed', subject: 'Estado del pipeline: Fallo', to: 'junior.saul.maiz@gmail.com'
        }
    }
}
